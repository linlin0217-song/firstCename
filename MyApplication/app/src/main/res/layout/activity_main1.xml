<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--添加水平滚动屏-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            tools:ignore="SpeakableTextPresentCheck" />


    </LinearLayout>

    <!--中间小标签-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview1"
            android:layout_width="310dp"
            android:layout_height="match_parent"
            android:text="@string/text_name1"
            android:textColor="#B3B0B0"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textview2"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="@string/text_name2"
            android:textColor="#EA1818"
            android:textSize="15sp" />

    </LinearLayout>

    <!--中下布局-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:orientation="vertical">

    </LinearLayout>

    <!--底部布局-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button1"
            android:layout_width="136dp"
            android:layout_height="match_parent"
            android:text="@string/button_name1"
            android:backgroundTint="#FBF8F8"
            android:textSize="17sp"
            android:textColor="@color/black">
        </Button>

        <Button
            android:id="@+id/button2"
            android:layout_width="136dp"
            android:layout_height="match_parent"
            android:text="@string/button_name2"
            android:backgroundTint="#FBF8F8"
            android:textSize="17sp"
            android:textColor="@color/black">
        </Button>

        <Button
            android:id="@+id/button3"
            android:layout_width="136dp"
            android:layout_height="match_parent"
            android:text="@string/button_name3"
            android:backgroundTint="#FBF8F8"
            android:textColor="@color/black"
            android:textSize="17sp">

        </Button>

    </LinearLayout>


</LinearLayout>